    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'techworld-api'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=techworld-api",
                    "--package=techworld-api"
                ],
                "filter": {
                    "name": "techworld-api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CLEARDB_DATABASE_URL": "mysql://root:epicpassword@localhost:3306/techworld",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'techworld-api'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=techworld-api",
                    "--package=techworld-api"
                ],
                "filter": {
                    "name": "techworld-api",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}